<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Dispatch.Theme">

    <Style x:Key="ChromelessWindow" TargetType="Window">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundColor}" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="28"
                    CornerRadius="0"
                    GlassFrameThickness="-1"
                    ResizeBorderThickness="4" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="GridSplitter">
        <Setter Property="Width" Value="24" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridSplitter">
                    <Grid Background="Transparent">
                        <Border
                            Width="1"
                            HorizontalAlignment="Center"
                            Background="{StaticResource SeparatorColor}" />
                        <Grid
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Width}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Ellipse
                                x:Name="Ellipse"
                                Fill="{StaticResource PrimaryBackgroundColor}"
                                Stroke="{StaticResource SeparatorColor}"
                                StrokeThickness="1" />
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Path
                                    x:Name="Arrow1"
                                    Data="M 4,0 L 0,4 L 4,8"
                                    Stroke="{StaticResource NormalTextColor}"
                                    StrokeThickness="1" />
                                <Path
                                    x:Name="Arrow2"
                                    Margin="3,0,0,0"
                                    Data="M 0,0 L 4,4 L 0,8"
                                    Stroke="{StaticResource NormalTextColor}"
                                    StrokeThickness="1" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

