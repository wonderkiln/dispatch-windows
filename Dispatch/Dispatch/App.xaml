<Application
    x:Class="Dispatch.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="View/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Colors.Light.xaml" />
                <ResourceDictionary Source="Theme/Base.xaml" />

                <ResourceDictionary Source="Theme/Common.xaml" />
                <ResourceDictionary Source="Theme/Button.xaml" />
                <ResourceDictionary Source="Theme/List.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
