<Window
    x:Class="Dispatch.View.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dispatch.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Dispatch.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About Dispatch"
    Width="300"
    Height="400"
    Background="{StaticResource PrimaryBackgroundSolidColorBrush}"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource ChromelessWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <controls:ChromeButtons HorizontalAlignment="Right" VerticalAlignment="Top" />
        <StackPanel
            Margin="-12,24,24,24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="54" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image
                    Width="36"
                    Height="36"
                    VerticalAlignment="Center"
                    Source="/Resources/Icon.ico" />
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Label Content="{x:Static helpers:Constants.APP_NAME}" FontSize="16" />
                    <Label Content="{x:Static helpers:Constants.VERSION_STRING}" Opacity="0.5" />
                </StackPanel>
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,12,0,0"
                    Padding="8,6"
                    HorizontalAlignment="Left"
                    Background="{StaticResource SelectionOnPanelBackgroundSolidColorBrush}"
                    Click="UpdatesButton_Click"
                    Content="Check for updates"
                    Style="{StaticResource SimpleButtonStyle}" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
