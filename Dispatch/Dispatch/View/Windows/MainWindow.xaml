<Window
    x:Class="Dispatch.Screen.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dispatch.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dispatch.Screen"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Dispatch.View"
    Title="Dispatch"
    Width="1000"
    Height="600"
    Icon="../../Resources/Icon.ico"
    Style="{StaticResource ChromelessWindow}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="3" Height="1" VerticalAlignment="Bottom" Fill="#EBEBEB" />
            <ListBox x:Name="TabsListBox" ButtonBase.Click="CloseTabButton_Click" ItemsSource="{Binding ViewModel.Tabs, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}" SelectedIndex="0" SelectionChanged="TabListBox_SelectionChanged" Style="{StaticResource ChromeTabListBox}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="15" Foreground="#FFC200" Text="&#xE945;" />
                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Column="1" Margin="24,0" Orientation="Horizontal">
                <Menu>
                    <Menu.Style>
                        <Style TargetType="Menu">
                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Menu">
                                        <StackPanel ClipToBounds="True" IsItemsHost="True" Orientation="Horizontal" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Menu.Style>
                    <MenuItem Click="NewTabButton_Click">
                        <MenuItem.Header>
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Text="&#xE710;" />
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="Transfers" Click="MenuItem_Click">
                        <MenuItem.Header>
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Text="&#xE896;" />
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Text="&#xE712;" />
                        </MenuItem.Header>
                        <MenuItem Click="UpdatesButton_Click" Header="Check for Updates" />
                        <MenuItem Header="More">
                            <MenuItem Header="Report Bug" />
                            <MenuItem Header="About" />
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </StackPanel>
            <Popup x:Name="p" AllowsTransparency="True" Placement="Bottom" PlacementTarget="{Binding ElementName=Transfers}" PopupAnimation="Fade" StaysOpen="False">
                <Border Width="300" Height="300" Style="{StaticResource PopupContainerBorder}" />
            </Popup>
            <controls:ChromeButtons Grid.Column="2" VerticalAlignment="Top" />
        </Grid>
        <Border Grid.Row="1" Background="White">
            <view:TabView ViewModel="{Binding SelectedItem, ElementName=TabsListBox}" />
        </Border>
    </Grid>
</Window>
