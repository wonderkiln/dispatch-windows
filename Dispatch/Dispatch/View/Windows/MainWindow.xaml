<Window
    x:Class="Dispatch.View.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dispatch.View.Controls"
    xmlns:converters="clr-namespace:Dispatch.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fragments="clr-namespace:Dispatch.View.Fragments"
    xmlns:local="clr-namespace:Dispatch.View.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dispatch"
    Width="1000"
    Height="600"
    Icon="../../Resources/Icon.ico"
    Style="{StaticResource ChromelessWindow}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate x:Key="LightningIcon">
            <TextBlock
                FontFamily="Segoe MDL2 Assets"
                FontSize="15"
                Foreground="#FFC200"
                Text="&#xE945;" />
        </DataTemplate>
        <DataTemplate x:Key="CloudIcon">
            <TextBlock
                FontFamily="Segoe MDL2 Assets"
                FontSize="15"
                Text="&#xE753;" />
        </DataTemplate>
        <converters:ListViewModelToViewSelector
            x:Key="IconSelector"
            ConnectTemplate="{StaticResource LightningIcon}"
            ListTemplate="{StaticResource CloudIcon}" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Rectangle
                Grid.ColumnSpan="3"
                Height="1"
                VerticalAlignment="Bottom"
                Fill="#EBEBEB" />
            <ListBox
                x:Name="TabsListBox"
                ButtonBase.Click="CloseTabButton_Click"
                ItemsSource="{Binding ViewModel.Tabs, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}"
                SelectedIndex="0"
                SelectionChanged="TabListBox_SelectionChanged"
                Style="{StaticResource ChromeTabListBox}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter
                                VerticalAlignment="Center"
                                Content="{Binding RightViewModel}"
                                ContentTemplateSelector="{StaticResource IconSelector}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding Title}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel
                Grid.Column="1"
                Margin="24,0"
                Orientation="Horizontal">
                <Menu>
                    <Menu.Style>
                        <Style TargetType="Menu">
                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Menu">
                                        <StackPanel
                                            ClipToBounds="True"
                                            IsItemsHost="True"
                                            Orientation="Horizontal" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Menu.Style>
                    <MenuItem Click="NewTabButton_Click">
                        <MenuItem.Header>
                            <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Text="&#xE710;" />
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="Transfers" Click="TransfersMenuItem_Click">
                        <MenuItem.Header>
                            <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Text="&#xE896;" />
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <TextBlock
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="14"
                                Text="&#xE712;" />
                        </MenuItem.Header>
                        <MenuItem Click="UpdateMenuItem_Click" Header="Check for Updates" />
                        <MenuItem Header="More">
                            <MenuItem Click="AboutMenuItem_Click" Header="About" />
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </StackPanel>
            <Popup
                x:Name="TransfersPopup"
                AllowsTransparency="True"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=Transfers}"
                PopupAnimation="Fade"
                StaysOpen="False">
                <Border
                    Width="300"
                    Height="300"
                    Style="{StaticResource PopupContainerBorder}">
                    <fragments:QueueView />
                </Border>
            </Popup>
            <controls:ChromeButtons Grid.Column="2" VerticalAlignment="Top" />
        </Grid>
        <Border Grid.Row="1" Background="White">
            <fragments:TabView ViewModel="{Binding SelectedItem, ElementName=TabsListBox}" />
        </Border>
    </Grid>
</Window>
