<UserControl
    x:Class="Dispatch.View.Fragments.QueueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dispatch.View.Fragments"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ListBox ItemsSource="{Binding ViewModel.Items, RelativeSource={RelativeSource AncestorType={x:Type local:QueueView}}}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding Type, Mode=OneWay}" />
                    <TextBlock>
                        From:<Run Text="{Binding Source.Path, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock>
                        To:<Run Text="{Binding Destination.Path, Mode=OneWay}" />
                    </TextBlock>
                    <ProgressBar
                        Maximum="100"
                        Minimum="0"
                        Height="12"
                        Value="{Binding Progress, Mode=OneWay}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
