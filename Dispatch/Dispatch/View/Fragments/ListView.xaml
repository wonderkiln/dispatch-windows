<UserControl x:Class="Dispatch.View.ListView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:helpers="clr-namespace:Dispatch.Helpers" xmlns:local="clr-namespace:Dispatch.View" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:BytesToStringConverter x:Key="BytesToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="#F7F7F7" BorderBrush="#EBEBEB" BorderThickness="0,0,0,1">
            <ListBox Margin="8,0" AllowDrop="True" DragOver="ListBox_DragOver" DragEnter="ListBox_DragOver" Drop="ListBox_Drop" SelectionChanged="ListBox_SelectionChanged" Style="{StaticResource ChromeTabListBox}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="MaxWidth" Value="220" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" Background="Transparent">
                                        <ContentPresenter Margin="8,0" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#5F000000" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="15" Text="&#xE8B7;" />
                            <TextBlock Margin="4,0,0,0" VerticalAlignment="Center" Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="42" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button VerticalAlignment="Center" Command="{Binding ViewModel.BackCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ListView}}}" Content="&#xE72B;" FontSize="14" Style="{StaticResource ChromeButtonStyle}" />
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding ViewModel.Current.Path, RelativeSource={RelativeSource AncestorType={x:Type local:ListView}}}" />
        </Grid>
