<UserControl x:Class="Dispatch.View.Controls.ChromeButtons" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" mc:Ignorable="d">

    <StackPanel Height="28" Orientation="Horizontal">
        <Button x:Name="Minimize" Click="Minimize_Click" Content="&#xE921;" Style="{StaticResource ChromeButtonStyle}" />
        <Button x:Name="Restore" Click="Restore_Click" Content="&#xE923;" Style="{StaticResource ChromeButtonStyle}" />
        <Button x:Name="Maximize" Click="Maximize_Click" Content="&#xE922;" Style="{StaticResource ChromeButtonStyle}" />
        <Button x:Name="Close" Click="Close_Click" Content="&#xE8BB;" Style="{StaticResource CloseChromeButtonStyle}" />
    </StackPanel>

</UserControl>
