<UserControl
    x:Class="Dispatch.Fragments.ConnectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="clr-namespace:AttachedCommandBehavior;assembly=AttachedCommandBehavior"
    xmlns:cc="clr-namespace:Dispatch.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dispatch.Fragments"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Dispatch.ViewModels"
    d:DataContext="{d:DesignInstance vm:ConnectViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource SecondaryBackgroundSolidColorBrush}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="SFTPDataTemplate">
            <local:SFTPConnectView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Key="FTPDataTemplate">
            <local:FTPConnectView DataContext="{Binding}" />
        </DataTemplate>
        <local:ConnectViewDataTemplateSelector
            x:Key="ConnectViewDataTemplateSelector"
            FTPDataTemplate="{StaticResource FTPDataTemplate}"
            SFTPDataTemplate="{StaticResource SFTPDataTemplate}" />
        <ContextMenu x:Key="SaveContextMenu">
            <MenuItem
                Command="{Binding DataContext.ConnectFavoriteCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectView}}}"
                CommandParameter="{Binding}"
                Header="Connect">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8AF;" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem
                Command="{Binding DataContext.EditFavoriteCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectView}}}"
                CommandParameter="{Binding}"
                Header="Edit">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Command="{Binding DataContext.DeleteFavoriteCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectView}}}"
                CommandParameter="{Binding}"
                Header="Delete">
                <MenuItem.Icon>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        <Style TargetType="cc:DPTextBox">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundSolidColorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SeparatorSolidColorBrush}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{DynamicResource NormalTextSolidColorBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="cc:DPTextBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="{TemplateBinding LabelSharedSizeGroup}" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        x:Name="Label"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Label}"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Opacity="0.6" />
                                    <Label
                                        x:Name="Placeholder"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Placeholder}"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Opacity="0.5" />
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Grid.Column="1"
                                        VerticalAlignment="Center" />
                                    <ContentPresenter
                                        x:Name="TrailingView"
                                        Grid.Column="2"
                                        ContentSource="Trailing" />
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPlaceholderShown" Value="False">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsLabelShown" Value="False">
                                <Setter TargetName="Label" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsFocused" Value="True" />
                                    <Condition Property="Validation.HasError" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryAccentSolidColorBrush}" />
                                <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource NormalTextSolidColorBrush}" />
                            </MultiTrigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundSolidColorBrush}" />
                                <Setter TargetName="Label" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ErrorSolidColorBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ErrorSolidColorBrush}" />
                                <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)/ErrorContent}" />
                            </Trigger>
                            <Trigger Property="Trailing" Value="{x:Null}">
                                <Setter TargetName="TrailingView" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter TargetName="PART_ContentHost" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox
                Margin="16,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding ConnectionTypes}"
                SelectedItem="{Binding ConnectionType}" />
            <ScrollViewer
                Grid.Row="1"
                VerticalContentAlignment="Center"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="60">
                    <ContentPresenter Content="{Binding Connection}" ContentTemplateSelector="{StaticResource ConnectViewDataTemplateSelector}" />
                    <StackPanel
                        Margin="0,12,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,12,0"
                            Padding="12,6"
                            Background="{DynamicResource SelectionOnSecondaryBackgroundSolidColorBrush}"
                            Command="{Binding SaveAsFavoriteCommand}"
                            Content="Add to favorites"
                            Style="{StaticResource SimpleButtonStyle}" />
                        <Button
                            cc:DPButtonExtension.IsLoading="{Binding IsConnecting}"
                            Command="{Binding ConnectCommand}"
                            Content="Connect" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ListBox
            Grid.Row="1"
            Padding="16"
            ItemsSource="{Binding FavoritesViewModel.Items}"
            SelectedItem="{Binding SelectedFavorite}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                    <Setter Property="a:CommandBehavior.Event" Value="MouseDoubleClick" />
                    <Setter Property="a:CommandBehavior.Command" Value="{Binding DataContext.ConnectFavoriteCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectView}}}" />
                    <Setter Property="a:CommandBehavior.CommandParameter" Value="{Binding}" />
                    <Setter Property="ContextMenu" Value="{StaticResource SaveContextMenu}" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel MaxWidth="80">
                        <Border
                            Width="48"
                            Height="48"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource PrimaryAccentSolidColorBrush}"
                            BorderThickness="1"
                            CornerRadius="3">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource SelectedTextSolidColorBrush}"
                                Text="{Binding Connection}" />
                        </Border>
                        <TextBlock
                            Margin="0,6,0,0"
                            Text="{Binding Title}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <GridSplitter
            Grid.Row="1"
            Margin="0,-12,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            ResizeBehavior="PreviousAndCurrent"
            ResizeDirection="Rows" />
    </Grid>
</UserControl>
