<Window x:Class="Dispatch.Screen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dispatch.Screen"
        xmlns:view="clr-namespace:Dispatch.View"
        xmlns:vm="clr-namespace:Dispatch.ViewModel"
        xmlns:helpers="clr-namespace:Dispatch.Helpers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Help">
                <MenuItem Header="Check for updates" Click="MenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Queue" Click="MenuItem_Click_1" />
        </Menu>
        <TabControl x:Name="TabControl" Grid.Row="1" SelectedIndex="0" ItemsSource="{Binding Tabs, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <view:TabView ViewModel="{Binding}" OnConnected="TabView_OnConnected" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <StatusBar Grid.Row="2">
            <StatusBarItem Visibility="{Binding SelectedItem.RightViewModel, Mode=OneWay, Source={x:Reference TabControl}, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock>
                    Connected to <Run Text="{Binding SelectedItem.Title, Mode=OneWay, Source={x:Reference TabControl}}" />
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem Visibility="{Binding SelectedItem.RightViewModel, Mode=OneWay, Source={x:Reference TabControl}, Converter={StaticResource NullToVisibilityConverter}}">
                <Button Content="Disconnect" Click="Button_Click" />
            </StatusBarItem>
            <StatusBarItem Visibility="{Binding SelectedItem.RightViewModel.IsBusy, Mode=OneWay, Source={x:Reference TabControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" Width="60" Height="8" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
